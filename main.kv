WindowManager:

    MainScreen:
    FirstWindow:
        id: First
    SecondWindow:
        id: Second
    ThirdWindow:
        id: Third
    ResultScreen:
        id: RScreen
    ResultScreen1:
        id: RScreen1
    ResultScreen2:
        id: RScreen2

<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "ВЫБЕРИТЕ КАТЕГОРИЮ"
        Button:
            text: "ОДНО ОКНО"
            on_release:
                app.root.current = "1okno"
        Button:
            text: "ДВА ОКНА"
            on_release:
                app.root.current = "2okna"
        Button:
            text: "ДВА РАЗНЫХ ОКНА"
            on_release:
                app.root.current = "2oknar"

<FirstWindow>:
    name: "1okno"   
    BoxLayout:
        id: palki
        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "КОЛИЧЕСТВО РЕШЕТОК"
            font_size: 32
        TextInput:
            id: input1
            multiline: False
            size_hint: (1, .5)
        Label:
            text: "КОЛИЧЕСТВО ПЛАШЕК"
            font_size: 32
        TextInput:
            id: input2
            multiline: False
            size_hint: (1, .5)
        Button:
            text: "ДАЛЕЕ"
            font_size: 32
            on_press: root.Ras1()
            on_release:
                app.root.current = "result"
                root.manager.transition.direction = "left"
            

