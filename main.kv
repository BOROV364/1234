        TextInput:
            id: input4
            multiline: False
            size_hint: (1, .5)
        Button:
            text: "ДАЛЕЕ"
            font_size: 32
            on_press: root.Ras2()
            on_release:
                app.root.current = "result1"
                root.manager.transition.direction = "left"

