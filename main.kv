<ResultScreen>:
    name: "result"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            id: recup_infos
            font_size: 32
            color: 'white'
        Button:
            text: "РАССЧИТАТЬ"
            font_size: 32
            on_press:
                root.on_press()

